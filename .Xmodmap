! get german umlauts and sharp s at a convenient position
keycode  30 = u U udiaeresis Udiaeresis
keycode  32 = o O odiaeresis Odiaeresis
keycode  38 = a A adiaeresis Adiaeresis
keycode  39 = s S ssharp

! turn Alt_R into "AltGr"
clear Mod1
add Mod1 = Alt_L
add Mod1 = Meta_L
keysym Alt_R = Mode_switch Mode_switch
